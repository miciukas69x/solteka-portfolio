generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model NewsletterSubscriber {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  source        String?   // "footer", "hero", "blog", etc.
  subscribedAt  DateTime  @default(now())
  unsubscribedAt DateTime?
  isActive      Boolean   @default(true)
  tags          String[]  @default(["newsletter"]) // ["newsletter", "discounts", "blog"]
  
  @@index([email])
  @@index([isActive])
  @@map("newsletter_subscribers")
}

model CheckoutSubmission {
  id            String    @id @default(cuid())
  name          String
  email         String
  phone         String
  comment       String?
  solutionSlug  String    // "simple-hustle", "seo-integrated", etc.
  solutionTitle String    // Store solution title for reference
  pricing       String    // Store pricing info
  status        String    @default("pending") // "pending", "paid", "cancelled"
  stripeSessionId String? // Will be set when Stripe is integrated
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([email])
  @@index([solutionSlug])
  @@index([status])
  @@index([createdAt])
  @@map("checkout_submissions")
}
